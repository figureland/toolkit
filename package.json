{
  "name": "@figureland/toolkit",
  "version": "0.0.16",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./clipboard": {
      "types": "./dist/clipboard.d.ts",
      "require": "./dist/clipboard.js",
      "import": "./dist/clipboard.js"
    },
    "./device": {
      "types": "./dist/device.d.ts",
      "require": "./dist/device.js",
      "import": "./dist/device.js"
    },
    "./filedrop": {
      "types": "./dist/filedrop.d.ts",
      "require": "./dist/filedrop.js",
      "import": "./dist/filedrop.js"
    },
    "./fullscreen": {
      "types": "./dist/fullscreen.d.ts",
      "require": "./dist/fullscreen.js",
      "import": "./dist/fullscreen.js"
    },
    "./keycommands": {
      "types": "./dist/keycommands.d.ts",
      "require": "./dist/keycommands.js",
      "import": "./dist/keycommands.js"
    },
    "./pointer": {
      "types": "./dist/pointer.d.ts",
      "require": "./dist/pointer.js",
      "import": "./dist/pointer.js"
    },
    "./screen": {
      "types": "./dist/screen.d.ts",
      "require": "./dist/screen.js",
      "import": "./dist/screen.js"
    }
  },
  "description": "A collection of utilities for building experimental, creative tools",
  "scripts": {
    "build": "bun run scripts/build.ts",
    "dev": "bun --watch scripts/dev.ts",
    "prepare": "husky",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "release": "bunx changelogen@latest --release"
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@types/bun": "^1.0.0",
    "bun-plugin-dts": "^0.2.1",
    "eslint": "^9.0.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2",
    "typescript-eslint": "^7.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/figureland/toolkit.git"
  },
  "author": "Figure Systems",
  "bugs": {
    "url": "https://github.com/figureland/toolkit"
  },
  "homepage": "https://github.com/figureland/toolkit#readme",
  "peerDependencies": {
    "@figureland/mathkit": ">=0.0.28",
    "@figureland/statekit": ">=0.0.73",
    "@figureland/typekit": ">=0.0.23"
  },
  "peerDependenciesMeta": {
    "@figureland/mathkit": {
      "optional": false
    },
    "@figureland/statekit": {
      "optional": false
    },
    "@figureland/typekit": {
      "optional": false
    }
  },
  "dependencies": {
    "@figureland/mathkit": "^0.0.28",
    "@figureland/statekit": "^0.0.73",
    "@figureland/typekit": "^0.0.23"
  }
}
